<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_figuras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_seleccionar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seleccionar" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/radio_r"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_generatriz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/generatriz_g"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_altura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/altura_h"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/area_base"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_lado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lado_l"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_perimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/perimetro_base"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_apotema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/apotema_ap"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_figura"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_calcular_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calcular_area"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_calcular_volumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calcular_volumen"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
